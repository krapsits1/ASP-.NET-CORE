@model md4.Models.Assignment
@{
    ViewData["Title"] = "Edit Assignment";
}

<h4>Edit Assignment</h4>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseId"></label>
        @if (ViewBag.Courses != null)
        {
            <select asp-for="CourseId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Courses, "Id", "Name", Model.CourseId))">
                <option value="">-- Select Course --</option>
            </select>
        }
        else
        {
            <p>No courses available</p>
        }
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Deadline"></label>
        <input asp-for="Deadline" type="date" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>

</form>
