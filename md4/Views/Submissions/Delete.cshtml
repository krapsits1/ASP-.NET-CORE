@model md4.Models.Submission
@{
    ViewData["Title"] = "Delete Submission";
}

<h4>Are you sure you want to delete this submission?</h4>

<dl class="row">
    <dt class="col-sm-2">Assignment:</dt>
    <dd class="col-sm-10">@Model.Assignment.Description</dd>

    <dt class="col-sm-2">Student:</dt>
    <dd class="col-sm-10">@Model.Student.Name @Model.Student.Surname</dd>

    <dt class="col-sm-2">Submission Time:</dt>
    <dd class="col-sm-10">@Model.SubmissionTime.ToString("g")</dd>

    <dt class="col-sm-2">Score:</dt>
    <dd class="col-sm-10">@Model.Score</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
