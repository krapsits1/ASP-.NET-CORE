@model md4.Models.Teacher
@{
    ViewData["Title"] = "Delete Teacher";
}

<h4>Are you sure you want to delete this teacher?</h4>

<dl class="row">
    <dt class="col-sm-2">Name:</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Surname:</dt>
    <dd class="col-sm-10">@Model.Surname</dd>

    <dt class="col-sm-2">Gender:</dt>
    <dd class="col-sm-10">@Model.Gender</dd>

    <dt class="col-sm-2">Contract Date:</dt>
    <dd class="col-sm-10">@Model.ContractDate.ToShortDateString()</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
